<FrameLayout
    tools:context="com.claude.sharecam.login.InputProfileFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/inputProfilePgb"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/loginLayout"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/inputProfileImg"
            android:src="@mipmap/ic_action_accept"
            android:layout_gravity="center_horizontal"
            android:layout_width="96dp"
            android:layout_height="96dp" />

        <EditText
            android:id="@+id/inputProfileNameET"
            android:hint="@string/login_name_hint"
            style="@style/editText"
            android:layout_marginTop="@dimen/normal_top_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height" />

        <TextView
            android:id="@+id/inputProfileNextBtn"
            android:text="@string/next"
            android:layout_marginTop="80dp"
            style="@style/textViewBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height" />

    </LinearLayout>
</FrameLayout>