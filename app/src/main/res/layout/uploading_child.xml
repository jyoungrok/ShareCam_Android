<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.claude.sharecam.view.ImageViewRecyclable
        android:id="@+id/upChildImageVIew"
        android:layout_width="48dp"
        android:layout_height="48dp" />
    <LinearLayout
        android:layout_toRightOf="@id/upChildImageVIew"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/upStateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/upShareText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_action_accept"
        android:visibility="gone"
        android:id="@+id/reUploadBtn"
        android:layout_width ="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>